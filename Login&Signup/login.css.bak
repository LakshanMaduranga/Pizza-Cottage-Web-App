body{
	font-family: Arial;
	margin:0;
	line-height: 1.5;
	color: white;
	text-shadow: 2px 2px 5px black;
}

.login-popup{
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	z-index: 1099;
	background-color:transparent;
	visibility: hidden;
	opacity: 0;
	transition: all 1s ease;
}
.login-popup.show{
	visibility:visible;
	opacity: 1;
}
.login-popup .box{
	background:url("log.jpg") ;
	-webkit-background-size: 100% 100%;
	-moz-background-size: 100% 100%;
	background-size: 100% 100%;
	width: 65%;
	height: 90%;
	position: absolute;
	left: 50%;
	top:50%;
	transform:translate(-50%,-50%);

}
.login-popup.show .box{
	opacity: 1;
	margin-left: 0;
}

.login-popup .box h2 { 
	font-family:arial;
	text-align: center;
}


.login-popup .box h4 {
	text-align: center;
}

.login-popup .box input {
	font-family: "Arial";
	padding: 4px;
	border: 2px solid #696969;
	border-radius: 8px;
	background: #F5F5F5;
	width:372px;
}

.login-popup .box td {
  padding-left: 40px;
  padding-right: 40px;
  width:100px;
}

.login-popup .box td.textBOX {
	padding-bottom:20px;
	
}

.login-popup .box button {
	text-align: center;
	width: 300px;
	height: 40px;
	display: inline-block;
	margin: 4px 2px;
	transition-duration: 0.4s;
	cursor: pointer;
	border:none;
	border-radius: 30px;
    font-family: "Arial";
}

.login-popup .box button.LogIn {
  background-color: white; 
  color: black; 
  border: 0px solid ;
  border-radius: 8px;
}

.login-popup .box button.LogIn:hover {
  background-color: #4CAF50;
  color: white;
}


a:link {
  color: red;
  background-color: transparent;
  text-decoration: none;
  text-align:center;
}
a:visited {
  color: red;
  background-color: transparent;
  text-decoration: none;
}
a:hover {
  color:green;
  background-color: transparent;
  text-decoration: none;
}
a:active {
  color: green;
  background-color: transparent;
  text-decoration: none;
}